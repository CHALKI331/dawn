{% comment %}
  Infinite Honeycomb Grid Section
  Displays 4 rows of perfectly tessellated hexagons (no gaps) that auto-scroll horizontally.
  Each hexagon shows a product's featured image (linking to the product page).
  Each row's content is duplicated for seamless scrolling.
{% endcomment %}

<div class="hexagon-scroll-container">
  {% assign rows = 4 %}
  {% assign products = collections.all.products %}
  {% for row in (0..rows-1) %}
    <div class="hexagon-row" data-row="{{ row }}">
      {% for product in products %}
        <a href="{{ product.url }}" class="hexagon">
          {% if product.featured_image %}
            <img src="{{ product.featured_image | img_url: '400x400' }}" alt="{{ product.title }}">
          {% else %}
            <div class="placeholder">No Image</div>
          {% endif %}
        </a>
      {% endfor %}
      {%- comment -%}
        Duplicate row for seamless infinite scrolling.
      {%- endcomment -%}
      {% for product in products %}
        <a href="{{ product.url }}" class="hexagon">
          {% if product.featured_image %}
            <img src="{{ product.featured_image | img_url: '400x400' }}" alt="{{ product.title }}">
          {% else %}
            <div class="placeholder">No Image</div>
          {% endif %}
        </a>
      {% endfor %}
    </div>
  {% endfor %}
</div>

