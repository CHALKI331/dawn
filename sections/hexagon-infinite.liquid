{% comment %}
  Infinite Hexagon Honeycomb
  - Displays a honeycomb pattern of clickable product images.
  - The grid is built in three rows; each rowâ€™s content is duplicated for a seamless infinite scroll.
{% endcomment %}

<div class="hexagon-scroll-container">
  <div class="hexagon-grid">
    {% assign rows = 3 %}
    {% assign products = collections.all.products %}
    {% for row in (0..rows-1) %}
      <div class="hexagon-row" data-row="{{ row }}">
        {%- for product in products -%}
          <a href="{{ product.url }}" class="hexagon">
            {% if product.featured_image %}
              <img src="{{ product.featured_image | img_url: '400x400' }}" alt="{{ product.title }}">
            {% else %}
              <div class="placeholder">No Image</div>
            {% endif %}
          </a>
        {%- endfor -%}
        {%- comment -%}
          Duplicate row for infinite scrolling
        {%- endcomment -%}
        {%- for product in products -%}
          <a href="{{ product.url }}" class="hexagon">
            {% if product.featured_image %}
              <img src="{{ product.featured_image | img_url: '400x400' }}" alt="{{ product.title }}">
            {% else %}
              <div class="placeholder">No Image</div>
            {% endif %}
          </a>
        {%- endfor -%}
      </div>
    {% endfor %}
  </div>
</div>

