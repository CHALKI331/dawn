    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "event",
      "name": "Timeline Event",
      "settings": [
        {
          "type": "text",
          "id": "year",
          "label": "Year",
          "default": "Year XXXX"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Event Description",
          "default": "Description of a significant event or milestone."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Vertical Timeline",
      "category": "Text",
      "blocks": [
        { "type": "event" },
        { "type": "event" },
        { "type": "event" }
      ]
    }
  ]
}
{% endschema %}