{%- style -%}

  .vertical_timeline .card_content .card_data p {
      margin: 0;
      line-height: 1.5;
  }

  .vertical_timeline .card_content .card_data strong,
  .vertical_timeline .card_content .card_data b {
      font-weight: bold;
  }

  .vertical_timeline .card_content .card_data a {
      color: var(--color-accent, #0073e6);
      text-decoration: underline;
  }

  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | plus: 20 }}px;  /* Moderate increase for top spacing */
    padding-bottom: {{ section.settings.padding_bottom | plus: 20 }}px;  /* Moderate increase for bottom spacing */
  }

  .vertical_timeline {
    position: relative;
    overflow: hidden;
    margin-top: 30px;  /* Reduced extra space above the timeline */
  }

  .vertical_timeline .card_content {
    position: relative;
    list-style: none;
    padding-top: 10px;  /* Reduced spacing between title and first card */
  }

  .vertical_timeline .card_content li {
    position: relative;
    width: 100%;
    margin-bottom: 40px; /* Reduced spacing between timeline events */
    margin-top: 10px;  /* Reduced spacing on individual cards */
  }

  .vertical_timeline .card_content li .card_data {
    border-radius: 12px;
    position: relative;
    width: 45%;
    background-color: var(--color-background, #fff);
    border: 2px solid var(--color-border, #000);
    padding: 15px;
    box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.5s ease-in-out;
  }

  .vertical_timeline .card_content li:nth-child(odd) .card_data {
    left: 0;
    transform: translateX(-50px);
  }

  .vertical_timeline .card_content li:nth-child(even) .card_data {
    left: 55%;
    transform: translateX(50px);
  }

  .vertical_timeline .card_content li.in-view .card_data {
    opacity: 1;
    transform: translateX(0);
  }

{%- endstyle -%}
