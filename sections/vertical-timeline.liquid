{%- style -%}

  .vertical_timeline .card_content .card_data p {
      margin: 0;
      line-height: 1.5;
  }

  .vertical_timeline .card_content .card_data strong,
  .vertical_timeline .card_content .card_data b {
      font-weight: bold;
  }

  .vertical_timeline .card_content .card_data a {
      color: var(--color-accent, #0073e6);
      text-decoration: underline;
  }

  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | plus: 100 }}px;
    padding-bottom: {{ section.settings.padding_bottom | plus: 30 }}px;
  }

  .vertical_timeline {
    position: relative;
    overflow: hidden;
  }

  .vertical_timeline .card_content {
    position: relative;
    list-style: none;
    padding: 0;
  }

  .vertical_timeline .card_content::before {
    content: "";
    position: absolute;
    top: 60px; /* Adjusted starting point */
    bottom: 0;
    left: 50%;
    width: 4px;
    background: linear-gradient(transparent, {{ section.settings.line_color }}, transparent);
    transform: translateX(-50%);
    opacity: 1;
    animation: fadeInLine 1.5s forwards;
  }

  @keyframes fadeInLine {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  .vertical_timeline .card_content li {
    position: relative;
    width: 100%;
    margin-bottom: 60px; /* Increased spacing between items */
  }

  .vertical_timeline .card_content li .card_data {
    border-radius: 12px;
    position: relative;
    width: 45%;
    background-color: var(--color-background, #fff);
    border: 2px solid var(--color-border, #000);
    padding: 15px;
    box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.5s ease-in-out;
  }

  .vertical_timeline .card_content li:nth-child(odd) .card_data {
    left: 0;
    transform: translateX(-50px);
  }

  .vertical_timeline .card_content li:nth-child(even) .card_data {
    left: 55%;
    transform: translateX(50px);
  }

  .vertical_timeline .card_content li.in-view .card_data {
    opacity: 1;
    transform: translateX(0);
  }

  .vertical_timeline .card_content li::after {
    content: attr(data-year);
    position: absolute;
    left: 50%;
    top: 20px; /* Better positioning for hexagon */
    width: auto;
    padding: 8px 12px;
    background-color: {{ section.settings.dot_color }};
    clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%);
    transform: translate(-50%, 0);
    z-index: 2;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    color: #fff;
    white-space: nowrap;
  }

  @media screen and (max-width: 600px) {
    .vertical_timeline .card_content li .card_data {
      width: 90%;
      left: 5%;
    }

    .vertical_timeline .card_content li:nth-child(even) .card_data {
      left: 5%;
    }

    .vertical_timeline .card_content li::after {
      top: 10px; /* Adjusted for mobile */
      font-size: 12px;
      padding: 6px 10px;
    }
  }
{%- endstyle -%}
