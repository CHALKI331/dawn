{% comment %}
  Hexagon Grid Section
  This section loops through products in the 'frontpage' collection and displays them in a hexagon grid.
{% endcomment %}

<div class="hexagon-grid">
  {% for product in collections.frontpage.products %}
    <div class="hexagon">
      <img src="{{ product.featured_image | img_url: 'medium' }}" alt="{{ product.title }}">
    </div>
  {% endfor %}
</div>

{% schema %}
{
  "name": "Hexagon Grid",
  "settings": [],
  "presets": [
    {
      "name": "Hexagon Grid",
      "category": "Custom"
    }
  ]
}
{% endschema %}
