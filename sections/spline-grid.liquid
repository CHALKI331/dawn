<div class="spline-grid-container">
  {% for block in section.blocks %}
    <div class="spline-grid-item {{ block.settings.class }}">
      <div class="spline-wrapper">
        <iframe 
          src="{{ block.settings.scene_url }}" 
          frameborder="0" 
          allowfullscreen 
          style="border: none; width: 100%; height: 100%;"
        ></iframe>
      </div>
    </div>
  {% endfor %}
</div>

{% schema %}
{
  "name": "Spline Grid",
  "settings": [],
  "blocks": [
    {
      "type": "scene",
      "name": "Spline Scene",
      "settings": [
        {
          "type": "url",
          "id": "scene_url",
          "label": "Spline Scene URL",
          "info": "Paste the full URL from your Spline embed (e.g., https://prod.spline.design/...)"
        },
        {
          "type": "text",
          "id": "class",
          "label": "CSS Class (optional)",
          "default": "spline-item"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Spline Grid",
      "blocks": [
        {
          "type": "scene"
        },
        {
          "type": "scene"
        },
        {
          "type": "scene"
        }
      ]
    }
  ]
}
{% endschema %}